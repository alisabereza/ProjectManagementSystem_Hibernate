<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.project.management.domain.Company" table="companies" catalog="project_management" schema="public">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator  class="increment">
                <param name="sequence">course_id_seq</param>
            </generator>
        </id>
        <property name="name" type="java.lang.String">
            <column name="company_name" length="30"/>
        </property>
        <property name="startDate" type="java.lang.String">
            <column name="start_date" length="30"/>
        </property>
    </class>
</hibernate-mapping>