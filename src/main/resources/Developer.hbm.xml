<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.project.management.domain.Developer" table="companies" catalog="project_management" schema="public">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator  class="increment">
                <param name="sequence">course_id_seq</param>
            </generator>
        </id>
        <property name="name" type="java.lang.String">
            <column name="developer_name" length="50"/>
        </property>
        <property name="age" type="integer">
            <column name="developer_age" length="50"/>
        </property>
        <property name="gender" column="developer_gender" update="true" insert="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.project.management.domain.DeveloperGender</param>
                <param name="type">12</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="salary" type="integer">
            <column name="salary" length="50"/>
        </property>
    </class>
</hibernate-mapping>